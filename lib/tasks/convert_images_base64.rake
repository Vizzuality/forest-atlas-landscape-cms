namespace :images do

  desc "Converts all the images from base 64 to files"
  task convert: :environment do
    #ContentImage.create_from_base64(5, "data:image/png;base64,")
    SitePage.find_each do |page|
      images = new_content.scan(/"(data:image[^"]*)/)
      images.each do |image|
        file_image = ContentImage.create_from_base64 page.id, image
        page.content.gsub(image, file_image.url)
      end
    end

  end
end
