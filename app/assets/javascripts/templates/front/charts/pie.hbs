{
  "width": {{{width}}},
  "height": {{{height}}},
  "padding": "strict",
  "data": [{
    "name": "table",
    "values": {{{data}}},
    "transform": [{
      "type": "aggregate",
      "groupby": {{{xColumn}}},
      "summarize": [{
      "field": {{{xColumn}}},
      "ops": ["count"],
      "as": "count" }]
    },
    { "type": "pie", "field": "count" }]
    },
    {
      "name": "goupedData",
      "source": "table",
      "transform": [{ "type": "facet", "groupby": [{{{xColumn}}}] }]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": "colorRange",
      "domain": {"data": "table","field": {{{xColumn}}} }
    },
    {
      "name": "legend-series-y",
      "type": "ordinal",
      "range": [40, {{{math height "-" 10}}}],
      "domain": {"data": "table","field": {{{xColumn}}} }
    }
  ],
  "marks": [{
    "type": "arc",
    "from": {
      "data": "table"
    },
    "properties": {
      "enter": {
        "x": {
          "field": {
            "group": "width"
          },
          "mult": 0.5
        },
        "y": {
          "field": {
            "group": "height"
          },
          "mult": 0.5
        },
        "startAngle": {
          "field": "layout_start"
        },
        "endAngle": {
          "field": "layout_end"
        },
        "innerRadius": {
          "value": {{{math height "*" 0.2}}}
        },
        "outerRadius": {
          "value": {{{height}}},
          "mult": 0.5
        },
        "stroke": {
          "value": "#fff"
        }
      },
      "update": {
        "fill": {
          "field": {{{xColumn}}},
          "scale": "color"
        }
      }
    }
  },{
      "type": "text",
      "properties": {
        "enter": {
          "x": {"value": -140},
          "y": {"value": 10},
          "text": {
            "template": {{{xLabel}}}
          },
          "fill": {"value": "black"},
          "fontWeight": {"value": 300}
        }
      }
  }],
"legends": [
    {
      "fill": "color",
      "properties": {
        "labels": {
          "y": {"scale": "legend-series-y", "offset": 0},
          "x": {"value": 30},
          "text": {
            "template": "\{{datum.data|left:1|upper}}\{{datum.data|slice:1|truncate:15}}"
            },
          "fontSize": {"value": 14},
          "fontWeight": {"value": 300}
        },
        "symbols": {
          "y": {"scale": "legend-series-y", "offset": -5},
          "x": {"value": 15},
          "size": {"value": 100},
          "shape": {"value": "circle"},
          "stroke": "#ffffff"
        }
      }
    }
  ]
}
