{
  "width": {{{width}}},
  "height": {{{height}}},
  "padding": "strict",
  "data": [{
    "name": "table",
    "values": {{{data}}}
  }],
  "scales": [{
    "name": "x",
    "type": "ordinal",
    "range": "width",
    "domain": {
      "data": "table",
      "field": {{{xColumn}}}
    }
  }, {
    "name": "y",
    "type": "linear",
    "range": "height",
    "domain": {
      "data": "table",
      "field": {{{yColumn}}}
    },
    "nice": true
  },
  {
    "name": "color",
    "type": "ordinal",
    "range": "colorRange",
    "domain": {"data": "table","field": {{{xColumn}}} }
  }],
  "axes": [{
      "layer": "back",
      "type": "x",
      "scale": "x",
      "title": {{{xLabel}}},
      "tickSize": 5,
      "tickSizeEnd": 0,
      "properties": {
      "labels": {
        "text": {"template": "\{{datum.data | truncate:10}}"},
        "align": {"value": "right"},
        "baseline": {"value": "middle"},
        "angle": {"value": -45},
        "fontSize": {"value": 11}
        },
        "title": {
          "dy": {"value": 35},
          "baseline": {"value": "top"},
          "fontWeight": {"value": 300}
        },
        "axis": {
          "stroke": {"value": "#999999"}
        }
      }
    }, {
    "grid": true,
    "layer": "back",
    "type": "y",
    "scale": "y",
    "title": {{{yLabel}}},
    "tickSize": 30,
    "properties": {
      "grid": {
        "stroke": {"value": "#eeeeee"},
        "strokeWidth": {"value": 2},
        "strokeDash": {"value": [5, 5]}
      },
      "ticks": {
        "stroke": {"value": "#eeeeee"},
        "strokeDash": {"value": [5, 5]}
      },
      "labels": {
        "text": {
          "template": "\{{datum.data | number:'.2s' }}"
        },
        "align": {"value": "left"},
        "baseline": {"value": "bottom"},
        "fontSize": {"value": 11},
        "dx": {"value": 15}
        },
        "title": {
          "angle": {"value": 0},
          "y":{"value": -20 },
          "x":{"value": -12 },
          "align": {"value": "left"},
          "fontWeight": {"value": 300}
        }
      }
  }],
  "marks": [{
    "type": "rect",
    "from": {
      "data": "table"
    },
    "properties": {
      "enter": {
        "x": {
          "scale": "x",
          "field": {{{xColumn}}},
          "offset": 10
        },
        "width": {
          "scale": "x",
          "band": true,
          "offset": -15
        },
        "y": {
          "scale": "y",
          "field": {{{yColumn}}}
        },
        "y2": {
          "scale": "y",
          "value": 0
        }
      },
      "update": {
        "fill": {
          "field": {{{xColumn}}},
          "scale": "color"
        }
      }
    }
  }]
}
