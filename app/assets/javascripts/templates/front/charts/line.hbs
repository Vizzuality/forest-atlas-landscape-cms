{
  "width": {{{width}}},
  "height": {{{height}}},
  "padding": "strict",
  "data": [
    {
      "name": "table",
      "values": {{{data}}},
      "format": {
        "parse": {
          {{{xColumn}}}: "date"
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "nice": true,
      "type": "time",
      "zero": false,
      "range": "width",
      "domain": {"data": "table","field": {{{xColumn}}} }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {"data": "table","field": {{{yColumn}}} }
    }
  ],
  "axes": [{
    "type": "x",
    "scale": "x",
    "ticks": 6,
    "tickSizeEnd": 0,
    "title": {{{xLabel}}},
    "properties": {
      "axis": {
        "stroke": {"value": "#999999"}
      },
      "title": {
        "fontWeight": {"value": 300},
        "dy": {"value": 35},
        "baseline": {"value": "top"}
      }
    }
  }, {
    "type": "y",
    "scale": "y",
    "title": {{{yLabel}}},
    "properties": {
      "title": {
        "angle": {"value": 0},
        "y":{"value": -20 },
        "x":{"value": -12 },
        "align": {"value": "left"},
        "fontWeight": {"value": 300}
      }
    }
  }],
  "marks": [{
    "type": "area",
    "from": {"data": "table"},
    "properties": {
      "enter": {
        "x": {"scale": "x","field": {{{xColumn}}} },
        "y": {"scale": "y","field": {{{yColumn}}} },
        "stroke": {"value": "#97be32"},
        "strokeWidth": {"value": 2}
        },
      "update": {"fillOpacity": {"value": 1}},
      "hover": {"fillOpacity": {"value": 0.5}}
      }
    }
  ]
}
