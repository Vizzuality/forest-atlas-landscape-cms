<div class="c-dashboard">
  <h1 class="title-dashboard">Page Templates</h1>

  <table class="c-table-basic" cellspacing="0">
    <thead class="header-table">
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @page_templates.each do |page_template| %>
        <tr>
          <td><%= page_template.name %></td>
          <td><%= link_to 'Show', admin_page_template_path(page_template) %></td>
          <td><%= link_to 'Edit', edit_admin_page_template_path(page_template) %></td>
          <td><%= link_to 'Destroy', admin_page_template_path(page_template), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Page Template', new_admin_page_template_path, class: 'c-button -primary' %>

</div>
