          <% @breadcrumbs.each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <ul class="menu">
      <li><%= link_to 'Content Management ', management_path, class: '-highlight' %></li>
      <li><%= link_to 'Logout', auth_logout_path, {class: 'nav-link', :method => :delete} %></li>
    </ul>
  </div>
</div>

