<div class="c-dashboard">
  <h1 class="title-dashboard">Site Templates</h1>

  <table class="c-table-basic" cellspacing="0">
    <thead class="header-table">
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @site_templates.each do |site_template| %>
        <tr>
          <td><%= site_template.name %></td>
          <td><%= link_to 'Show', admin_site_template_path(site_template) %></td>
          <td><%= link_to 'Edit', edit_admin_site_template_path(site_template) %></td>
          <td><%= link_to 'Destroy', admin_site_template_path(site_template), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Site Template', new_admin_site_template_path, class: 'c-button -primary' %>
</div>
