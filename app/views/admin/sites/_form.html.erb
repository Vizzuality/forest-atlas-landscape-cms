<%= render partial: 'shared/errors', locals: { resource: @site } %>
<%= form_for([:admin ,site], :html => { :class =>'c-form-basic' }) do |f|%>
    <%= f.hidden_field :step, value: '1' %>

    <fieldset class="container-input">
      <%= f.label :name, class: '' %>
      <div><%= f.text_field :name, class: 'c-input', placeholder: 'name' %></div>
    </fieldset>

    <fieldset class="container-input">
      <%= f.label :url, class: '' %>
      <div><%= f.text_field :url, class: 'c-input', placeholder: 'url' %></div>
    </fieldset>

    <fieldset class="container-input">
      <%= f.label :template_id, class: '' %>
      <div class="container-select">
        <%= f.collection_select :site_template_id, SiteTemplate.all, :id, :name, {}, {:class => 'c-input -select'} %>
      </div>
    </fieldset>
    <%= render partial: 'footer', locals: { f: f , submit_text: 'CREATE', home: false} %>
<% end %>
