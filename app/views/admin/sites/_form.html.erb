<%= render partial: 'shared/errors', locals: { resource: @site } %>
<%= include_gon %>
<%= form_for([:admin, site]) do |f| %>
    <%= f.hidden_field :step, value: '1' %>

    <h1>SITE NAME</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna.</p>

    <fieldset class="form-group row">
      <%= f.label :name, class: 'col-sm-2 form-control-label' , value: '' %>
      <div class="col-sm-10"><%= f.text_field :name, class: 'form-control' %></div>
    </fieldset>

    <%= fields_for :routes do |url_form| %>
