<% content_for :extended_header do %>
  <div class="c-extended-header -high">
    <div class="wrapper">
      <div class="description">
        <h1>Page creation</h1>
        <p>Please choose which type of page you want to create.</p>
      </div>
      <div></div>
    </div>
  </div>
<% end %>

<div class="l-page-creation -type">
  <div class="wrapper">
    <div class="c-card-list">
      <div class="card -footer-at-bottom">
        <h3 class="title">Open Content page</h3>
        <p class="description">Create a new page with any type of content you want in.</p>
        <div class="footer">
          <%= link_to 'Create', {controller: 'management/site_pages', action: 'new', site_slug: @site.slug, type: ContentType::OPEN_CONTENT}, class: 'c-button' %>
        </div>
      </div>
      <div class="card -footer-at-bottom">
        <h3 class="title">Analysis Dashboard</h3>
        <p class="description">Build a dashboard based on a dataset.</p>
        <div class="footer">
          <%= link_to 'Create', {controller: 'management/site_pages', action: 'new', site_slug: @site.slug, type: ContentType::ANALYSIS_DASHBOARD}, class: 'c-button' %>
        </div>
      </div>
      <div class="card -footer-at-bottom">
        <h3 class="title">Dynamic Indicator Dashboard</h3>
        <p class="description">Create a dynamic indicator based on a list of widgets.</p>
        <div class="footer">
          <%= link_to 'Create', {controller: 'management/site_pages', action: 'new', site_slug: @site.slug, type: ContentType::DYNAMIC_INDICATOR_DASHBOARD}, class: 'c-button' %>
        </div>
      </div>
      <div class="card -footer-at-bottom">
        <h3 class="title">External link</h3>
        <p class="description">Add a link to appear in the menus.</p>
        <div class="footer">
          <%= link_to 'Create', {controller: 'management/site_pages', action: 'new', site_slug: @site.slug, type: ContentType::LINK}, class: 'c-button' %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :action_bar do %>
  <%= link_to 'Cancel', {controller: 'management/site_pages', action: 'index', site_slug: @site.slug}, class: 'c-button -outline -dark-text' %>
  <a class="c-button -disabled">Continue</a>
<% end %>
