<h1>Pages</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= link_to 'Show', management_page_path(page) %></td>
        <td><%= link_to 'Edit', edit_management_page_path(page) %></td>
        <td><%= link_to 'Destroy', management_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_management_page_path, class: 'btn btn-primary' %>
