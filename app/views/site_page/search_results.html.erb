<%= javascript_pack_tag 'application' %>

<%= react_component('Cover', {
  title: 'Search',
  subtitle: @site_page.site.name,
  image: @page_cover,
  size: 'small',
  template: @site_page.site.site_template.name
} ) %>

<%= react_component('public/SearchResults', {
  site: @site_page.site,
  page: @site_page,
  search: @search_string,
  page: @page_number,
  totalPages: @total_pages,
  results: @search_results
}) %>

<script type="text/javascript">
  window.route = 'SearchResults';
</script>


