<%= javascript_pack_tag 'application' %>

<%= react_component('Cover', {
  title:  @site_page.name,
  subtitle: @site_page.site.name,
  image: @page_cover,
  size: 'small',
  template: @site_page.site.site_template.name
} ) %>

<%= react_component('StaticPage', {
  version: 2,
  page: @site_page,
  site: @site_page.site,
  siteSettings: defined?(@site_page.site.site_settings) ? @site_page.site.site_settings : nil,
  siteTitleOnly: @site_title_only,
  siteTemplateName: @site_page.site.site_template.name,
  coverImage: @page_cover,
  pageSize: defined?(size) ? size : nil,
  relatedPages: @site_page.related_pages
} ) %>

<script type="text/javascript">
  window.route = 'OpenContent';
</script>
