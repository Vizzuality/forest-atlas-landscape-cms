<% flash.each do |key, value| %>
  <% if key != 'error' %>
    <%
      case key
        when 'alert' then
          key = 'warning'
        when 'notice' then
          key = 'success'
      end
    %>
    <script>
    App.notifications.broadcast({
      closeable: true,
      autoCloseTimer: <%= key == 'alert' ? '-1' : '5' %>,
      type: '<%= key %>',
      content: '<%== j value %>'
     });
    </script>
  <% end %>
<% end %>
