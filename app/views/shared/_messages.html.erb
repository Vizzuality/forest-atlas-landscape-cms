<% flash.each do |key, value| %>
  <% if key != 'error' %>
    <%
      case key
        when 'alert' then
          key = 'warning'
        when 'notice' then
          key = 'success'
        when 'display' then
          key = 'display'
      end
    %>
    <% if key != 'display' %>
    <script>
      App.notifications.broadcast({
        closeable: true,
        autoCloseTimer: <%= key == 'alert' ? '-1' : '5' %>,
        type: '<%= key %>',
        content: '<%== j value %>'
       });
    </script>
    <% else %>
    <script>
      App.notifications.modal({
        title: '<%= value[:title] %>',
        content: '<%= value[:content] %>',
        bullets: '<%= value[:errors] %>'.split(',')
      });
    </script>
    <% end %>
  <% end %>
<% end %>
